{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "./build"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/index.ts",
        "./src/lib/geometry/Background.ts",
        "./src/lib/geometry/Color.ts",
        "./src/lib/geometry/Curve.ts",
        "./src/lib/geometry/Line.ts",
        "./src/lib/geometry/Point.ts",
        "./src/lib/geometry/QuadraticCurve.ts",
        "./src/lib/geometry/Rect.ts",
        "./src/lib/geometry/Transform.ts",
        "./src/lib/geometry/util.ts",
        "./src/model/Stroke.ts",
        "./src/renderer/FillShader.ts",
        "./src/renderer/Model.ts",
        "./src/renderer/Renderer.ts",
        "./src/renderer/Shader.ts",
        "./src/renderer/StrokeWeaver.ts",
        "./src/view/CanvasView.ts",
        "./src/view/LoginView.ts",
        "./src/view/colors.ts",
        "./src/view/styles.ts",
        "./src/view/util.ts",
        "./typings/bundle.d.ts",
        "./typings/firebase/firebase.d.ts",
        "./typings/lodash/lodash.d.ts",
        "./typings/node/node.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts"
    ]
}
