{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "./build"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/common/Color.ts",
        "./src/common/Curve.ts",
        "./src/common/Line.ts",
        "./src/common/Point.ts",
        "./src/common/QuadraticCurve.ts",
        "./src/common/Rect.ts",
        "./src/common/Transform.ts",
        "./src/common/util.ts",
        "./src/controller/CanvasController.ts",
        "./src/index.ts",
        "./src/model/Stroke.ts",
        "./src/renderer/Background.ts",
        "./src/renderer/FillShader.ts",
        "./src/renderer/Model.ts",
        "./src/renderer/Renderer.ts",
        "./src/renderer/Shader.ts",
        "./src/renderer/Stroke.ts",
        "./typings/bundle.d.ts",
        "./typings/lodash/lodash.d.ts",
        "./typings/node/node.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts"
    ]
}
