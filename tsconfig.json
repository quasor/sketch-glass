{
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "./build"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./typings/browser/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/Actions.ts",
        "./src/Dispatcher.ts",
        "./src/index.ts",
        "./src/lib/Disposable.ts",
        "./src/lib/DisposableBag.ts",
        "./src/lib/geometry/Background.ts",
        "./src/lib/geometry/Color.ts",
        "./src/lib/geometry/Curve.ts",
        "./src/lib/geometry/Line.ts",
        "./src/lib/geometry/Point.ts",
        "./src/lib/geometry/QuadraticCurve.ts",
        "./src/lib/geometry/Rect.ts",
        "./src/lib/geometry/Transform.ts",
        "./src/lib/geometry/util.ts",
        "./src/lib/rx/Variable.ts",
        "./src/lib/ui/Component.ts",
        "./src/lib/ui/Slot.ts",
        "./src/model/Canvas.ts",
        "./src/model/Palette.ts",
        "./src/model/Stroke.ts",
        "./src/model/Tool.ts",
        "./src/renderer/FillShader.ts",
        "./src/renderer/Model.ts",
        "./src/renderer/Renderer.ts",
        "./src/renderer/Shader.ts",
        "./src/renderer/StrokeWeaver.ts",
        "./src/view/ButtonView.ts",
        "./src/view/CanvasView.ts",
        "./src/view/InfoButtonsView.ts",
        "./src/view/MainView.ts",
        "./src/view/PaletteView.ts",
        "./src/view/SideBarView.ts",
        "./typings/browser/ambient/lodash/index.d.ts",
        "./typings/browser/ambient/node/index.d.ts",
        "./typings/browser/ambient/react-dom/index.d.ts",
        "./typings/browser/ambient/react/index.d.ts",
        "./typings/browser/ambient/rx/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
